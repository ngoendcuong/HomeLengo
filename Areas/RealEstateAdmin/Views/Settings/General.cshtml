@* Areas/RealEstateAdmin/Views/Settings/General.cshtml *@
@{
    Layout = "~/Areas/RealEstateAdmin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Cấu hình chung";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Cấu hình Chung</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/RealEstateAdmin/dashboard">Trang chủ</a></li>
                    <li class="breadcrumb-item">Cấu hình</li>
                    <li class="breadcrumb-item active">Chung</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <form>
            <div class="row">
                <div class="col-md-8">
                    <!-- Thông tin website -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Thông tin Website</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Tên website <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" value="@ViewBag.WebsiteName">
                            </div>

                            <div class="form-group">
                                <label>Slogan</label>
                                <input type="text" class="form-control" value="@ViewBag.Slogan">
                            </div>

                            <div class="form-group">
                                <label>Mô tả</label>
                                <textarea class="form-control" rows="4">HomeLengo là nền tảng bất động sản uy tín, kết nối người mua, người bán và môi giới chuyên nghiệp.</textarea>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Email liên hệ</label>
                                        <input type="email" class="form-control" value="@ViewBag.Email">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Hotline</label>
                                        <input type="text" class="form-control" value="@ViewBag.Phone">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Địa chỉ</label>
                                <input type="text" class="form-control" value="@ViewBag.Address">
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Giờ làm việc</label>
                                        <input type="text" class="form-control" value="8:00 - 18:00 (Thứ 2 - Thứ 7)">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Copyright</label>
                                        <input type="text" class="form-control" value="© 2025 HomeLengo. All rights reserved.">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Mạng xã hội -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-share-alt"></i> Mạng xã hội</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label><i class="fab fa-facebook text-primary"></i> Facebook</label>
                                <input type="url" class="form-control" placeholder="https://www.facebook.com/nguyen.duy.cuong.579127?locale=vi_VN">
                            </div>

                            <div class="form-group">
                                <label><i class="fab fa-youtube text-danger"></i> YouTube</label>
                                <input type="url" class="form-control" placeholder="">
                            </div>

                            <div class="form-group">
                                <label><i class="fab fa-tiktok"></i> TikTok</label>
                                <input type="url" class="form-control" placeholder="">
                            </div>

                            <div class="form-group">
                                <label><i class="fab fa-instagram text-danger"></i> Instagram</label>
                                <input type="url" class="form-control" placeholder="">
                            </div>

                            <div class="form-group">
                                <label><i class="fab fa-linkedin text-primary"></i> LinkedIn</label>
                                <input type="url" class="form-control" placeholder="https://linkedin.com/company/homelengo">
                            </div>

                            <div class="form-group">
                                <label>Zalo</label>
                                <input type="text" class="form-control" placeholder="0912345678">
                            </div>
                        </div>
                    </div>

                    <!-- Google Maps -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-map-marked-alt"></i> Google Maps</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Google Maps API Key</label>
                                <input type="text" class="form-control" placeholder="AIzaSy...">
                                <small class="text-muted">Dùng để hiển thị bản đồ trên website</small>
                            </div>

                            <div class="form-group">
                                <label>Google Maps Embed URL (Văn phòng)</label>
                                <textarea class="form-control" rows="3" placeholder="<iframe src='https://www.google.com/maps/embed?...'></iframe>"></textarea>
                                <small class="text-muted">Copy từ Google Maps → Share → Embed a map</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <!-- Lưu cấu hình -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Lưu cấu hình</h3>
                        </div>
                        <div class="card-body">
                            <button type="submit" class="btn btn-success btn-block">
                                <i class="fas fa-save"></i> Lưu thay đổi
                            </button>
                            <button type="button" class="btn btn-secondary btn-block">
                                <i class="fas fa-undo"></i> Khôi phục mặc định
                            </button>
                        </div>
                    </div>

                    <!-- Cài đặt hiển thị -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Cài đặt hiển thị</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Số BĐS mỗi trang</label>
                                <input type="number" class="form-control" value="12">
                            </div>

                            <div class="form-group">
                                <label>Số blog mỗi trang</label>
                                <input type="number" class="form-control" value="10">
                            </div>

                            <div class="form-group">
                                <label>Ngôn ngữ</label>
                                <select class="form-control">
                                    <option selected>Tiếng Việt</option>
                                    <option>Tiếng Anh</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Múi giờ</label>
                                <select class="form-control">
                                    <option selected>(GMT+7) Bangkok, Hanoi, Jakarta</option>
                                    <option>(GMT+0) London</option>
                                    <option>(GMT-5) New York</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <!-- Bảo trì -->
                    <div class="card card-warning">
                        <div class="card-header">
                            <h3 class="card-title">Chế độ bảo trì</h3>
                        </div>
                        <div class="card-body">
                            <div class="custom-control custom-switch">
                                <input type="checkbox" class="custom-control-input" id="maintenanceMode">
                                <label class="custom-control-label" for="maintenanceMode">
                                    Bật chế độ bảo trì
                                </label>
                            </div>
                            <small class="text-muted d-block mt-2">
                                Website sẽ hiển thị thông báo bảo trì cho tất cả người dùng (trừ Admin)
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>