@* Areas/RealEstateAdmin/Views/Settings/Notifications.cshtml *@
@model IEnumerable<dynamic>
@{
    Layout = "~/Areas/RealEstateAdmin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Thông báo hệ thống";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Thông báo Hệ thống</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/RealEstateAdmin/dashboard">Home</a></li>
                    <li class="breadcrumb-item">Cấu hình</li>
                    <li class="breadcrumb-item active">Thông báo</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <!-- Cài đặt thông báo -->
        <div class="card">
            <div class="card-header bg-primary">
                <h3 class="card-title">Cài đặt Thông báo</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5>Thông báo cho Admin</h5>
                        <div class="custom-control custom-switch mb-2">
                            <input type="checkbox" class="custom-control-input" id="notifyNewProperty" checked>
                            <label class="custom-control-label" for="notifyNewProperty">
                                Tin BĐS mới chờ duyệt
                            </label>
                        </div>
                        <div class="custom-control custom-switch mb-2">
                            <input type="checkbox" class="custom-control-input" id="notifyNewUser" checked>
                            <label class="custom-control-label" for="notifyNewUser">
                                Người dùng mới đăng ký
                            </label>
                        </div>
                        <div class="custom-control custom-switch mb-2">
                            <input type="checkbox" class="custom-control-input" id="notifyNewOrder" checked>
                            <label class="custom-control-label" for="notifyNewOrder">
                                Đơn hàng mới (mua gói)
                            </label>
                        </div>
                        <div class="custom-control custom-switch mb-2">
                            <input type="checkbox" class="custom-control-input" id="notifyNewContact" checked>
                            <label class="custom-control-label" for="notifyNewContact">
                                Form liên hệ mới
                            </label>
                        </div>
                        <div class="custom-control custom-switch mb-2">
                            <input type="checkbox" class="custom-control-input" id="notifyNewReview">
                            <label class="custom-control-label" for="notifyNewReview">
                                Đánh giá mới cần duyệt
                            </label>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h5>Thông báo cho User/Agent</h5>
                        <div class="custom-control custom-switch mb-2">
                            <input type="checkbox" class="custom-control-input" id="notifyPropertyApproved" checked>
                            <label class="custom-control-label" for="notifyPropertyApproved">
                                Tin đăng được duyệt
                            </label>
                        </div>
                        <div class="custom-control custom-switch mb-2">
                            <input type="checkbox" class="custom-control-input" id="notifyPropertyRejected" checked>
                            <label class="custom-control-label" for="notifyPropertyRejected">
                                Tin đăng bị từ chối
                            </label>
                        </div>
                        <div class="custom-control custom-switch mb-2">
                            <input type="checkbox" class="custom-control-input" id="notifyNewLead" checked>
                            <label class="custom-control-label" for="notifyNewLead">
                                Lead mới từ khách hàng
                            </label>
                        </div>
                        <div class="custom-control custom-switch mb-2">
                            <input type="checkbox" class="custom-control-input" id="notifyPackageExpiring" checked>
                            <label class="custom-control-label" for="notifyPackageExpiring">
                                Gói dịch vụ sắp hết hạn
                            </label>
                        </div>
                        <div class="custom-control custom-switch mb-2">
                            <input type="checkbox" class="custom-control-input" id="notifyNewReply">
                            <label class="custom-control-label" for="notifyNewReply">
                                Trả lời bình luận
                            </label>
                        </div>
                    </div>
                </div>

                <hr>

                <div class="form-group">
                    <label>Phương thức thông báo</label>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="methodInApp" checked>
                                <label class="custom-control-label" for="methodInApp">
                                    <i class="fas fa-bell text-warning"></i> Trong ứng dụng
                                </label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="methodEmail" checked>
                                <label class="custom-control-label" for="methodEmail">
                                    <i class="fas fa-envelope text-primary"></i> Email
                                </label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="methodSMS">
                                <label class="custom-control-label" for="methodSMS">
                                    <i class="fas fa-sms text-success"></i> SMS
                                </label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="methodPush">
                                <label class="custom-control-label" for="methodPush">
                                    <i class="fas fa-mobile-alt text-info"></i> Push notification
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <button class="btn btn-success">
                    <i class="fas fa-save"></i> Lưu cài đặt
                </button>
            </div>
        </div>

        <!-- Quản lý thông báo -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Quản lý Thông báo</h3>
                <div class="card-tools">
                    <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#addNotificationModal">
                        <i class="fas fa-plus"></i> Tạo thông báo
                    </button>
                </div>
            </div>

            <div class="card-body">
                <table class="table table-bordered table-hover">
                    <thead class="bg-light">
                        <tr>
                            <th width="5%">ID</th>
                            <th width="25%">Tiêu đề</th>
                            <th width="35%">Nội dung</th>
                            <th width="10%">Loại</th>
                            <th width="10%">Trạng thái</th>
                            <th width="15%">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var notification in Model)
                        {
                            <tr>
                                <td>@notification.Id</td>
                                <td><strong>@notification.Title</strong></td>
                                <td>@notification.Message</td>
                                <td>
                                    @if (notification.Type == "warning")
                                    {
                                        <span class="badge badge-warning">
                                            <i class="fas fa-exclamation-triangle"></i> Cảnh báo
                                        </span>
                                    }
                                    else if (notification.Type == "info")
                                    {
                                        <span class="badge badge-info">
                                            <i class="fas fa-info-circle"></i> Thông tin
                                        </span>
                                    }
                                    else if (notification.Type == "success")
                                    {
                                        <span class="badge badge-success">
                                            <i class="fas fa-check-circle"></i> Thành công
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">
                                            <i class="fas fa-times-circle"></i> Lỗi
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (notification.IsActive)
                                    {
                                        <span class="badge badge-success">Đang hiển thị</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">Đã ẩn</span>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-warning" title="Sửa">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    @if (notification.IsActive)
                                    {
                                        <button class="btn btn-sm btn-secondary" title="Ẩn">
                                            <i class="fas fa-eye-slash"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-success" title="Hiện">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    }
                                    <button class="btn btn-sm btn-danger" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Lịch sử thông báo -->
        <div class="card">
            <div class="card-header bg-info">
                <h3 class="card-title">Lịch sử Thông báo gần đây</h3>
            </div>
            <div class="card-body">
                <div class="timeline">
                    <div class="time-label">
                        <span class="bg-info">Hôm nay</span>
                    </div>
                    <div>
                        <i class="fas fa-building bg-success"></i>
                        <div class="timeline-item">
                            <span class="time"><i class="fas fa-clock"></i> 14:30</span>
                            <h3 class="timeline-header">Tin BĐS mới được đăng</h3>
                            <div class="timeline-body">
                                Agent "Nguyễn Văn A" đã đăng tin "Căn hộ Vinhomes Q7"
                            </div>
                        </div>
                    </div>

                    <div>
                        <i class="fas fa-user bg-primary"></i>
                        <div class="timeline-item">
                            <span class="time"><i class="fas fa-clock"></i> 10:15</span>
                            <h3 class="timeline-header">Người dùng mới đăng ký</h3>
                            <div class="timeline-body">
                                User "user123@email.com" vừa tạo tài khoản
                            </div>
                        </div>
                    </div>

                    <div class="time-label">
                        <span class="bg-info">Hôm qua</span>
                    </div>

                    <div>
                        <i class="fas fa-dollar-sign bg-warning"></i>
                        <div class="timeline-item">
                            <span class="time"><i class="fas fa-clock"></i> 16:45</span>
                            <h3 class="timeline-header">Đơn hàng mới</h3>
                            <div class="timeline-body">
                                Agent "Trần Thị B" đã mua gói VIP
                            </div>
                        </div>
                    </div>

                    <div>
                        <i class="fas fa-clock bg-gray"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Modal Tạo thông báo -->
<div class="modal fade" id="addNotificationModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h4 class="modal-title">Tạo Thông báo mới</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label>Tiêu đề <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" placeholder="VD: Bảo trì hệ thống">
                    </div>

                    <div class="form-group">
                        <label>Nội dung <span class="text-danger">*</span></label>
                        <textarea class="form-control" rows="3" placeholder="Nội dung chi tiết thông báo"></textarea>
                    </div>

                    <div class="form-group">
                        <label>Loại thông báo</label>
                        <select class="form-control">
                            <option value="info">Thông tin</option>
                            <option value="warning">Cảnh báo</option>
                            <option value="success">Thành công</option>
                            <option value="danger">Lỗi</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Link (không bắt buộc)</label>
                        <input type="url" class="form-control" placeholder="https://...">
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label>Ngày bắt đầu</label>
                                <input type="datetime-local" class="form-control">
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label>Ngày kết thúc</label>
                                <input type="datetime-local" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Hiển thị cho</label>
                        <select class="form-control">
                            <option>Tất cả người dùng</option>
                            <option>Chỉ Admin</option>
                            <option>Chỉ Agent</option>
                            <option>Chỉ User thường</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="notificationActive" checked>
                            <label class="custom-control-label" for="notificationActive">
                                Kích hoạt ngay
                            </label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary">
                    <i class="fas fa-save"></i> Tạo thông báo
                </button>
            </div>
        </div>
    </div>
</div>