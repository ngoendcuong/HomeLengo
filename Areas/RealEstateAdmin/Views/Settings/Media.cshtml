@* Areas/RealEstateAdmin/Views/Settings/Media.cshtml *@
@{
    Layout = "~/Areas/RealEstateAdmin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Logo & Hình ảnh";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Logo & Hình ảnh</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/RealEstateAdmin/dashboard">Home</a></li>
                    <li class="breadcrumb-item">Cấu hình</li>
                    <li class="breadcrumb-item active">Logo & Hình ảnh</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <!-- Logo chính -->
                <div class="card">
                    <div class="card-header bg-primary">
                        <h3 class="card-title">Logo chính</h3>
                    </div>
                    <div class="card-body text-center">
                        <img src="https://via.placeholder.com/300x100?text=Logo" class="img-fluid mb-3" style="max-height: 100px; background: #f4f4f4; padding: 20px;">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="mainLogo">
                            <label class="custom-file-label" for="mainLogo">Chọn file...</label>
                        </div>
                        <small class="text-muted d-block mt-2">
                            <i class="fas fa-info-circle"></i> Khuyến nghị: PNG, 300x100px, nền trong suốt
                        </small>
                        <button class="btn btn-success btn-sm mt-2">
                            <i class="fas fa-upload"></i> Upload Logo
                        </button>
                    </div>
                </div>

                <!-- Logo footer -->
                <div class="card">
                    <div class="card-header bg-secondary">
                        <h3 class="card-title">Logo Footer (Màu trắng)</h3>
                    </div>
                    <div class="card-body text-center" style="background: #2c3e50;">
                        <img src="https://via.placeholder.com/250x80?text=Logo+Footer" class="img-fluid mb-3" style="max-height: 80px;">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="footerLogo">
                            <label class="custom-file-label" for="footerLogo">Chọn file...</label>
                        </div>
                        <small class="text-white d-block mt-2">
                            <i class="fas fa-info-circle"></i> Logo màu trắng để hiển thị trên nền tối
                        </small>
                        <button class="btn btn-success btn-sm mt-2">
                            <i class="fas fa-upload"></i> Upload Logo
                        </button>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <!-- Favicon -->
                <div class="card">
                    <div class="card-header bg-info">
                        <h3 class="card-title">Favicon</h3>
                    </div>
                    <div class="card-body text-center">
                        <img src="https://via.placeholder.com/64x64?text=Fav" class="mb-3" style="width: 64px; height: 64px;">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="favicon">
                            <label class="custom-file-label" for="favicon">Chọn file...</label>
                        </div>
                        <small class="text-muted d-block mt-2">
                            <i class="fas fa-info-circle"></i> Khuyến nghị: ICO, PNG 64x64px hoặc 32x32px
                        </small>
                        <button class="btn btn-success btn-sm mt-2">
                            <i class="fas fa-upload"></i> Upload Favicon
                        </button>
                    </div>
                </div>

                <!-- OG Image -->
                <div class="card">
                    <div class="card-header bg-warning">
                        <h3 class="card-title">OG Image (Social Share)</h3>
                    </div>
                    <div class="card-body text-center">
                        <img src="https://via.placeholder.com/1200x630?text=OG+Image" class="img-fluid mb-3" style="max-height: 200px;">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="ogImage">
                            <label class="custom-file-label" for="ogImage">Chọn file...</label>
                        </div>
                        <small class="text-muted d-block mt-2">
                            <i class="fas fa-info-circle"></i> Ảnh hiển thị khi share lên Facebook, Zalo. Khuyến nghị: 1200x630px
                        </small>
                        <button class="btn btn-success btn-sm mt-2">
                            <i class="fas fa-upload"></i> Upload OG Image
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Ảnh mặc định -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Ảnh mặc định</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <h5>Ảnh BĐS mặc định</h5>
                        <img src="https://via.placeholder.com/400x300?text=Property+Default" class="img-fluid mb-2">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="propertyDefault">
                            <label class="custom-file-label" for="propertyDefault">Chọn file...</label>
                        </div>
                        <small class="text-muted d-block mt-1">Hiển thị khi BĐS chưa có ảnh</small>
                    </div>

                    <div class="col-md-4">
                        <h5>Avatar mặc định</h5>
                        <img src="https://via.placeholder.com/200x200?text=Avatar" class="img-fluid mb-2 rounded-circle">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="avatarDefault">
                            <label class="custom-file-label" for="avatarDefault">Chọn file...</label>
                        </div>
                        <small class="text-muted d-block mt-1">Avatar cho user chưa upload</small>
                    </div>

                    <div class="col-md-4">
                        <h5>Ảnh blog mặc định</h5>
                        <img src="https://via.placeholder.com/600x400?text=Blog+Default" class="img-fluid mb-2">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="blogDefault">
                            <label class="custom-file-label" for="blogDefault">Chọn file...</label>
                        </div>
                        <small class="text-muted d-block mt-1">Ảnh mặc định cho bài blog</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Lưu -->
        <div class="text-center">
            <button class="btn btn-success btn-lg">
                <i class="fas fa-save"></i> Lưu tất cả thay đổi
            </button>
        </div>
    </div>
</section>