@* Areas/RealEstateAdmin/Views/Contacts/FormContacts.cshtml *@
@model IEnumerable<dynamic>
@{
    Layout = "~/Areas/RealEstateAdmin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Form liên hệ";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Form Liên hệ chung</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/RealEstateAdmin/dashboard">Home</a></li>
                    <li class="breadcrumb-item">Liên hệ</li>
                    <li class="breadcrumb-item active">Form liên hệ</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh sách Form liên hệ</h3>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="bg-light">
                            <tr>
                                <th width="5%">ID</th>
                                <th width="18%">Họ tên</th>
                                <th width="15%">Liên hệ</th>
                                <th width="20%">Tiêu đề</th>
                                <th width="12%">Trạng thái</th>
                                <th width="15%">Thời gian</th>
                                <th width="15%">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var form in Model)
                            {
                                <tr class="@(form.Status == "Chưa đọc" ? "table-warning" : "")">
                                    <td>@form.Id</td>
                                    <td><strong>@form.Name</strong></td>
                                    <td>
                                        <small>
                                            <i class="fas fa-phone"></i> @form.Phone<br>
                                            <i class="fas fa-envelope"></i> @form.Email
                                        </small>
                                    </td>
                                    <td>@form.Subject</td>
                                    <td>
                                        @if (form.Status == "Chưa đọc")
                                        {
                                            <span class="badge badge-warning">
                                                <i class="fas fa-envelope"></i> Chưa đọc
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-success">
                                                <i class="fas fa-envelope-open"></i> Đã đọc
                                            </span>
                                        }
                                    </td>
                                    <td><small>@form.CreatedDate</small></td>
                                    <td>
                                        <button class="btn btn-sm btn-info"
                                                data-toggle="modal"
                                                data-target="#formDetailModal">
                                            <i class="fas fa-eye"></i> Xem
                                        </button>
                                        <button class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Modal Chi tiết -->
<div class="modal fade" id="formDetailModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h4 class="modal-title">Chi tiết Liên hệ</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Họ tên:</strong> Hoàng Văn E</p>
                        <p><strong>Email:</strong> hoangvane@email.com</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Số điện thoại:</strong> 0911888999</p>
                        <p><strong>Thời gian:</strong> 15/01/2025 10:00</p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-12">
                        <p><strong>Tiêu đề:</strong> Hỏi về dịch vụ</p>
                        <div class="callout callout-info">
                            <p>Công ty có tư vấn pháp lý không? Tôi cần hỗ trợ về thủ tục mua bán.</p>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-12">
                        <label><strong>Trả lời:</strong></label>
                        <textarea class="form-control" rows="4" placeholder="Nhập nội dung trả lời..."></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">
                    <i class="fas fa-reply"></i> Gửi trả lời
                </button>
                <button type="button" class="btn btn-success">
                    <i class="fas fa-check"></i> Đánh dấu đã đọc
                </button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>