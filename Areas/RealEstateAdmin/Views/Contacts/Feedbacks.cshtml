@* Areas/RealEstateAdmin/Views/Contacts/Feedbacks.cshtml *@
@model IEnumerable<dynamic>
@{
    Layout = "~/Areas/RealEstateAdmin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Phản hồi khách hàng";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Phản hồi Khách hàng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/RealEstateAdmin/dashboard">Home</a></li>
                    <li class="breadcrumb-item">Liên hệ</li>
                    <li class="breadcrumb-item active">Phản hồi KH</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh sách Phản hồi</h3>
            </div>

            <div class="card-body">
                <div class="row">
                    @foreach (var feedback in Model)
                    {
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <h5>@feedback.Customer</h5>
                                        <div>
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= feedback.Rating)
                                                {
                                                    <i class="fas fa-star text-warning"></i>
                                                }
                                                else
                                                {
                                                    <i class="far fa-star text-warning"></i>
                                                }
                                            }
                                        </div>
                                    </div>
                                    <p class="text-muted"><small>BĐS: @feedback.Property</small></p>
                                    <p class="mb-2">@feedback.Comment</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">@feedback.CreatedDate</small>
                                        <div>
                                            @if (feedback.Status == "Đã duyệt")
                                            {
                                                <span class="badge badge-success">Đã duyệt</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-warning">Chờ duyệt</span>
                                            }
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="btn-group btn-block">
                                        @if (feedback.Status == "Chờ duyệt")
                                        {
                                            <button class="btn btn-sm btn-success">
                                                <i class="fas fa-check"></i> Duyệt
                                            </button>
                                            <button class="btn btn-sm btn-danger">
                                                <i class="fas fa-times"></i> Từ chối
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-secondary">
                                                <i class="fas fa-eye-slash"></i> Ẩn
                                            </button>
                                        }
                                        <button class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i> Chi tiết
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>