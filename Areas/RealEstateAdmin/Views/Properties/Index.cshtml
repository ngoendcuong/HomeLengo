@* Views/Admin/Properties/Index.cshtml *@
@model IEnumerable<HomeLengo.Models.PropertyViewModel>
@{
    Layout = "~/Areas/RealEstateAdmin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Quản lý Bất động sản";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quản lý Bất động sản</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
                    <li class="breadcrumb-item active">Bất động sản</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh sách Bất động sản</h3>
                <div class="card-tools">
                    @if (ViewBag.PendingStatusId != null)
                    {
                        <a href="@Url.Action("Index", "Properties", new { area = "RealEstateAdmin", statusId = ViewBag.PendingStatusId })" class="btn btn-warning btn-sm">
                            <i class="fas fa-clock"></i> Tin chờ duyệt
                        </a>
                    }
                </div>
            </div>
            
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <div class="card-body">
                <!-- Filters -->
                <form method="get" action="/RealEstateAdmin/Properties" id="filterForm">
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm..." value="@ViewBag.SearchString">
                        </div>
                        <div class="col-md-2">
                            <select name="propertyTypeId" class="form-control" onchange="document.getElementById('filterForm').submit();">
                                <option value="">Tất cả loại</option>
                                @if (ViewBag.PropertyTypes != null)
                                {
                                    @foreach (var item in ViewBag.PropertyTypes)
                                    {
                                        <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <select name="statusId" class="form-control" onchange="document.getElementById('filterForm').submit();">
                                <option value="">Tất cả trạng thái</option>
                                @if (ViewBag.PropertyStatuses != null)
                                {
                                    @foreach (var item in ViewBag.PropertyStatuses)
                                    {
                                        <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-info"><i class="fas fa-search"></i> Tìm</button>
                            @if (!string.IsNullOrEmpty(ViewBag.SearchString) || ViewBag.PropertyTypes != null || ViewBag.PropertyStatuses != null)
                            {
                                <a href="/RealEstateAdmin/Properties" class="btn btn-secondary ml-1"><i class="fas fa-times"></i> Xóa bộ lọc</a>
                            }
                        </div>
                    </div>
                </form>

                <!-- Table -->
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="bg-light">
                            <tr>
                                <th width="5%">ID</th>
                                <th width="10%">Ảnh</th>
                                <th width="25%">Tiêu đề</th>
                                <th width="10%">Loại</th>
                                <th width="12%">Giá</th>
                                <th width="10%">Trạng thái</th>
                                <th width="8%">VIP</th>
                                <th width="20%">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var property in Model)
                                {
                                    <tr>
                                        <td>@property.Id</td>
                                        <td style="text-align: center; vertical-align: middle;">
                                            @{
                                                var imagePath = property.Image;
                                                if (string.IsNullOrEmpty(imagePath) || imagePath == "https://via.placeholder.com/100x80")
                                                {
                                                    imagePath = "/assets/images/banner/banner-property-12.jpg";
                                                }
                                                else if (!imagePath.StartsWith("~/") && !imagePath.StartsWith("/"))
                                                {
                                                    if (imagePath.Contains("assets/images/property/"))
                                                    {
                                                        imagePath = "/" + imagePath.TrimStart('/');
                                                    }
                                                    else if (imagePath.Contains("assets/images/home/"))
                                                    {
                                                        imagePath = "/" + imagePath.TrimStart('/');
                                                    }
                                                    else
                                                    {
                                                        imagePath = "/assets/images/home/" + imagePath.TrimStart('/');
                                                    }
                                                }
                                                else if (imagePath.StartsWith("~/"))
                                                {
                                                    imagePath = imagePath.Replace("~/", "/");
                                                }
                                            }
                                            <div style="width: 80px; height: 60px; overflow: hidden; display: inline-block; border: 1px solid #dee2e6; border-radius: 4px; background: #f8f9fa;">
                                                <img src="@imagePath" alt="Property" style="width: 100%; height: 100%; object-fit: cover;" onerror="this.src='/assets/images/banner/banner-property-12.jpg'">
                                            </div>
                                        </td>
                                        <td>
                                            <strong>@property.Title</strong>
                                        </td>
                                        <td>@property.Type</td>
                                        <td><span class="text-danger font-weight-bold">@string.Format("{0:N0}", property.Price) @(property.Currency ?? "VNĐ")</span></td>
                                        <td>
                                            @if (property.Status == "Đang bán")
                                            {
                                                <span class="badge badge-success">@property.Status</span>
                                            }
                                            else if (property.Status == "Chờ duyệt")
                                            {
                                                <span class="badge badge-warning">@property.Status</span>
                                            }
                                            else if (property.Status == "Cho thuê")
                                            {
                                                <span class="badge badge-info">@property.Status</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary">@property.Status</span>
                                            }
                                        </td>
                                        <td>
                                            @if (property.IsVip)
                                            {
                                                <span class="badge badge-danger"><i class="fas fa-star"></i> VIP</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-sm btn-info" title="Xem chi tiết" onclick="showPropertyDetails(@property.Id)">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <form asp-action="Delete" asp-controller="Properties" asp-area="RealEstateAdmin" asp-route-id="@property.Id" method="post" style="display:inline;" onsubmit="return confirm('Bạn có chắc chắn muốn xóa bất động sản này?');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-danger" title="Xóa">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                            @if (property.Status == "Chờ duyệt")
                                            {
                                                <form asp-action="Approve" asp-controller="Properties" asp-area="RealEstateAdmin" asp-route-id="@property.Id" method="post" style="display:inline;" class="mt-1">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-success" title="Duyệt" onclick="return confirm('Bạn có chắc chắn muốn duyệt bất động sản này?');">
                                                        <i class="fas fa-check"></i> Duyệt
                                                    </button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center py-4">
                                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                        <p class="text-muted">Không tìm thấy bất động sản nào.</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model != null && Model.Any())
                {
                    <div class="row mt-3">
                        <div class="col-sm-5">
                            <div class="dataTables_info">Hiển thị <strong>@Model.Count()</strong> bản ghi</div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<!-- Modal for Property Details -->
<div class="modal fade" id="propertyDetailsModal" tabindex="-1" role="dialog" aria-labelledby="propertyDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="propertyDetailsModalLabel">Chi tiết Bất động sản</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="propertyDetailsContent">
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="sr-only">Đang tải...</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showPropertyDetails(propertyId) {
            $('#propertyDetailsModal').modal('show');
            $('#propertyDetailsContent').html('<div class="text-center"><div class="spinner-border" role="status"><span class="sr-only">Đang tải...</span></div></div>');
            
            $.ajax({
                url: '/RealEstateAdmin/Properties/GetPropertyDetails',
                type: 'GET',
                data: { id: propertyId },
                success: function(data) {
                    var imagePath = data.image;
                    if (imagePath && imagePath.startsWith('~/')) {
                        imagePath = imagePath.replace('~/', '/');
                    }
                    if (!imagePath || imagePath === 'https://via.placeholder.com/100x80') {
                        imagePath = '/assets/images/banner/banner-property-12.jpg';
                    }
                    
                    var html = `
                        <div class="row">
                            <div class="col-md-4">
                                <img src="${imagePath}" alt="${data.title}" class="img-fluid rounded" onerror="this.src='/assets/images/banner/banner-property-12.jpg'">
                            </div>
                            <div class="col-md-8">
                                <h4 class="mb-3">${data.title}</h4>
                                <div class="mb-2">
                                    <strong>Giá:</strong> 
                                    <span class="text-danger font-weight-bold">${formatNumber(data.price)} ${data.currency}</span>
                                </div>
                                <div class="mb-2">
                                    <strong>Loại:</strong> ${data.type}
                                </div>
                                <div class="mb-2">
                                    <strong>Trạng thái:</strong> 
                                    <span class="badge badge-${getStatusBadgeClass(data.status)}">${data.status}</span>
                                    ${data.isVip ? '<span class="badge badge-danger ml-2"><i class="fas fa-star"></i> VIP</span>' : ''}
                                </div>
                                ${data.area ? `<div class="mb-2"><strong>Diện tích:</strong> ${formatNumber(data.area)} m²</div>` : ''}
                                ${data.bedrooms ? `<div class="mb-2"><strong>Phòng ngủ:</strong> ${data.bedrooms}</div>` : ''}
                                ${data.bathrooms ? `<div class="mb-2"><strong>Phòng tắm:</strong> ${data.bathrooms}</div>` : ''}
                                ${data.lotSize ? `<div class="mb-2"><strong>Diện tích đất:</strong> ${formatNumber(data.lotSize)} m²</div>` : ''}
                                <div class="mb-2">
                                    <strong>Địa chỉ:</strong> ${data.address}
                                </div>
                                <div class="mb-2">
                                    <strong>Khu vực:</strong> ${data.neighborhood !== 'N/A' ? data.neighborhood + ', ' : ''}${data.district !== 'N/A' ? data.district + ', ' : ''}${data.city}
                                </div>
                                <div class="mb-2">
                                    <strong>Người đăng:</strong> ${data.agentName}
                                </div>
                                <div class="mb-2">
                                    <strong>Lượt xem:</strong> ${data.views}
                                </div>
                                <div class="mb-2">
                                    <strong>Ngày tạo:</strong> ${data.createdAt}
                                </div>
                                <div class="mt-3">
                                    <strong>Mô tả:</strong>
                                    <p class="text-muted">${data.description}</p>
                                </div>
                            </div>
                        </div>
                    `;
                    $('#propertyDetailsContent').html(html);
                },
                error: function() {
                    $('#propertyDetailsContent').html('<div class="alert alert-danger">Không thể tải thông tin bất động sản. Vui lòng thử lại sau.</div>');
                }
            });
        }
        
        function formatNumber(num) {
            return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".");
        }
        
        function getStatusBadgeClass(status) {
            if (status.includes('Đang bán') || status.includes('bán')) return 'success';
            if (status.includes('Chờ duyệt') || status.includes('duyệt')) return 'warning';
            if (status.includes('Cho thuê') || status.includes('thuê')) return 'info';
            return 'secondary';
        }
    </script>
}
