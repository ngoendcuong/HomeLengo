@* Views/Admin/Agents/Detail.cshtml *@
@model dynamic
@{
    Layout = "~/Areas/RealEstateAdmin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Chi tiết Môi giới";
}
@{
    var reviews = ViewBag.Reviews as List<HomeLengo.Models.Review> ?? new();
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Hồ sơ Môi giới</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
                    <li class="breadcrumb-item"><a href="/admin/agents">Môi giới</a></li>
                    <li class="breadcrumb-item active">Chi tiết</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
                <!-- Profile Card -->
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            @{
                                var avatarPath = Model.Avatar;
                                if (string.IsNullOrEmpty(avatarPath))
                                {
                                    avatarPath = "/assets/images/avatar/avatarMacDinh.jpg";
                                }
                                else if (!avatarPath.StartsWith("http://") && !avatarPath.StartsWith("https://") && !avatarPath.StartsWith("/"))
                                {
                                    avatarPath = "/assets/images/avatar/" + avatarPath.TrimStart('/');
                                }
                            }
                            <img class="profile-user-img img-fluid img-circle" src="@avatarPath" alt="User profile picture" onerror="this.src='/assets/images/avatar/avatarMacDinh.jpg'">
                        </div>
                        <h3 class=" profile-username text-center">@Model.Name</h3>
                        <p class="text-muted text-center">Môi giới bất động sản</p>
                        <div class="text-center mb-3">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= (int)Model.Rating)
                                {
                                    <i class="fas fa-star text-warning"></i>
                                }
                                else if (i - 0.5 <= Model.Rating)
                                {
                                    <i class="fas fa-star-half-alt text-warning"></i>
                                }
                                else
                                {
                                    <i class="far fa-star text-warning"></i>
                                }
                            }
                            <br>
                            <strong>@Model.Rating</strong> (@Model.Reviews đánh giá)
                        </div>

                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>Tin đăng</b> <a class="float-right">@Model.TotalProperties</a>
                            </li>
                            <li class="list-group-item">
                                <b>Lượt xem</b> <a class="float-right">@Model.TotalViews</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Contact Info -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Thông tin liên hệ</h3>
                    </div>
                    <div class="card-body">
                        <strong><i class="fas fa-phone mr-1"></i> Điện thoại</strong>
                        <p class="text-muted">@Model.Phone</p>
                        <hr>
                        <strong><i class="fas fa-envelope mr-1"></i> Email</strong>
                        <p class="text-muted">@Model.Email</p>
                        <hr>
                        <strong><i class="fas fa-map-marker-alt mr-1"></i> Địa chỉ</strong>
                        <p class="text-muted">@Model.Address</p>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <!-- About -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Giới thiệu</h3>
                    </div>
                    <div class="card-body">
                        <p>@Model.Bio</p>
                    </div>
                </div>

                <!-- Stats -->
                <div class="row">
                    <div class="col-md-3">
                        <div class="info-box">
                            <span class="info-box-icon bg-info"><i class="fas fa-building"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Tin đăng</span>
                                <span class="info-box-number">@Model.TotalProperties</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="info-box">
                            <span class="info-box-icon bg-success"><i class="fas fa-eye"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Lượt xem</span>
                                <span class="info-box-number">@Model.TotalViews</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="info-box">
                            <span class="info-box-icon bg-danger"><i class="fas fa-star"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Rating</span>
                                <span class="info-box-number">@Model.Rating/5</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Properties -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Tin đăng gần đây</h3>
                    </div>
                    <div class="card-body p-0">
                        @{
                            var properties = Model.Properties as IEnumerable<dynamic>;
                        }
                        @if (properties != null && properties.Any())
                        {
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Tiêu đề</th>
                                        <th>Giá</th>
                                        <th>Lượt xem</th>
                                        <th>Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var property in properties)
                                    {
                                        <tr style="cursor: pointer;" onclick="showPropertyDetails(@property.Id)">
                                            <td>@property.Title</td>
                                            <td>@string.Format("{0:N0}", property.Price) @property.Currency</td>
                                            <td>@property.Views</td>
                                            <td>
                                                @{
                                                    var status = property.Status?.ToString() ?? "N/A";
                                                }
                                                @if (status == "Đang bán")
                                                {
                                                    <span class="badge badge-success">@status</span>
                                                }
                                                else if (status == "Chờ duyệt")
                                                {
                                                    <span class="badge badge-warning">@status</span>
                                                }
                                                else if (status == "Cho thuê")
                                                {
                                                    <span class="badge badge-info">@status</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">@status</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="p-3 text-center text-muted">
                                <p>Chưa có tin đăng nào.</p>
                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>
            <div class="row mt-3">
                <div class="col-12">
                    <!-- Reviews -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Đánh giá từ khách hàng</h3>
                        </div>
                        <div class="card-body">

                            @if (reviews.Any())
                            {
                                foreach (var review in reviews)
                                {
                                    var avatarRaw = review.User?.Avatar;
                                    var avatar =
                                    string.IsNullOrWhiteSpace(avatarRaw) ? "https://via.placeholder.com/50" :
                                    (avatarRaw.StartsWith("http://") || avatarRaw.StartsWith("https://")) ? avatarRaw :
                                    avatarRaw.StartsWith("/") ? avatarRaw :
                                    Url.Content("~/assets/images/avatar/" + avatarRaw.TrimStart('/'));

                                    var userName = review.User?.FullName
                                    ?? review.User?.Username
                                    ?? "Người dùng";

                                    // ✅ Rating là byte (không nullable)
                                    var rating = (int)review.Rating;
                                    if (rating < 0) rating = 0;
                                    if (rating > 5) rating = 5;

                                    var createdDate = review.CreatedAt?.ToString("dd/MM/yyyy") ?? "";

                                    <div class="post">
                                        <div class="user-block">
                                            <img class="img-circle img-bordered-sm"
                                                 src="@avatar"
                                                 alt="@userName"
                                                 onerror="this.onerror=null; this.src='https://via.placeholder.com/50';">

                                            <span class="username">@userName</span>

                                            <span class="description">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= rating)
                                                    {
                                                        <i class="fas fa-star text-warning"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="far fa-star text-warning"></i>
                                                    }
                                                }
                                                @if (!string.IsNullOrEmpty(createdDate))
                                                {
                                                    <text> - @createdDate</text>
                                                }
                                            </span>
                                        </div>

                                        <p>@(string.IsNullOrWhiteSpace(review.Body) ? "Không có nội dung đánh giá" : review.Body)</p>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center text-muted py-4">
                                    Chưa có đánh giá nào cho môi giới này
                                </div>
                            }

                        </div>
                    </div>
                </div>
        </div>
    </div>
</section>

<!-- Modal for Property Details -->
<div class="modal fade" id="propertyDetailsModal" tabindex="-1" role="dialog" aria-labelledby="propertyDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="propertyDetailsModalLabel">Chi tiết Bất động sản</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="propertyDetailsContent">
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="sr-only">Đang tải...</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showPropertyDetails(propertyId) {
            $('#propertyDetailsModal').modal('show');
            $('#propertyDetailsContent').html('<div class="text-center"><div class="spinner-border" role="status"><span class="sr-only">Đang tải...</span></div></div>');
            
            $.ajax({
                url: '/RealEstateAdmin/Properties/GetPropertyDetails',
                type: 'GET',
                data: { id: propertyId },
                success: function(data) {
                    var imagePath = data.image;
                    if (imagePath && imagePath.startsWith('~/')) {
                        imagePath = imagePath.replace('~/', '/');
                    }
                    if (!imagePath || imagePath === 'https://via.placeholder.com/100x80') {
                        imagePath = '/assets/images/banner/banner-property-12.jpg';
                    }
                    
                    var html = `
                        <div class="row">
                            <div class="col-md-4">
                                <img src="${imagePath}" alt="${data.title}" class="img-fluid rounded" onerror="this.src='/assets/images/banner/banner-property-12.jpg'">
                            </div>
                            <div class="col-md-8">
                                <h4 class="mb-3">${data.title}</h4>
                                <div class="mb-2">
                                    <strong>Giá:</strong> 
                                    <span class="text-danger font-weight-bold">${formatNumber(data.price)} ${data.currency}</span>
                                </div>
                                <div class="mb-2">
                                    <strong>Loại:</strong> ${data.type}
                                </div>
                                <div class="mb-2">
                                    <strong>Trạng thái:</strong> 
                                    <span class="badge badge-${getStatusBadgeClass(data.status)}">${data.status}</span>
                                    ${data.isVip ? '<span class="badge badge-danger ml-2"><i class="fas fa-star"></i> VIP</span>' : ''}
                                </div>
                                ${data.area ? `<div class="mb-2"><strong>Diện tích:</strong> ${formatNumber(data.area)} m²</div>` : ''}
                                ${data.bedrooms ? `<div class="mb-2"><strong>Phòng ngủ:</strong> ${data.bedrooms}</div>` : ''}
                                ${data.bathrooms ? `<div class="mb-2"><strong>Phòng tắm:</strong> ${data.bathrooms}</div>` : ''}
                                ${data.lotSize ? `<div class="mb-2"><strong>Diện tích đất:</strong> ${formatNumber(data.lotSize)} m²</div>` : ''}
                                <div class="mb-2">
                                    <strong>Địa chỉ:</strong> ${data.address}
                                </div>
                                <div class="mb-2">
                                    <strong>Khu vực:</strong> ${data.neighborhood !== 'N/A' ? data.neighborhood + ', ' : ''}${data.district !== 'N/A' ? data.district + ', ' : ''}${data.city}
                                </div>
                                <div class="mb-2">
                                    <strong>Người đăng:</strong> ${data.agentName}
                                </div>
                                <div class="mb-2">
                                    <strong>Lượt xem:</strong> ${data.views}
                                </div>
                                <div class="mb-2">
                                    <strong>Ngày tạo:</strong> ${data.createdAt}
                                </div>
                                <div class="mt-3">
                                    <strong>Mô tả:</strong>
                                    <p class="text-muted">${data.description}</p>
                                </div>
                            </div>
                        </div>
                    `;
                    $('#propertyDetailsContent').html(html);
                },
                error: function() {
                    $('#propertyDetailsContent').html('<div class="alert alert-danger">Không thể tải thông tin bất động sản. Vui lòng thử lại sau.</div>');
                }
            });
        }
        
        function formatNumber(num) {
            return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".");
        }
        
        function getStatusBadgeClass(status) {
            if (status.includes('Đang bán') || status.includes('bán')) return 'success';
            if (status.includes('Chờ duyệt') || status.includes('duyệt')) return 'warning';
            if (status.includes('Cho thuê') || status.includes('thuê')) return 'info';
            return 'secondary';
        }
    </script>
}

