@* Views/Admin/Agents/Index.cshtml *@
@model IEnumerable<dynamic>
@{
    Layout = "~/Areas/RealEstateAdmin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Quản lý Môi giới";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quản lý Môi giới</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
                    <li class="breadcrumb-item active">Môi giới</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh sách Môi giới</h3>
                <div class="card-tools">
                    @* <button class="btn btn-primary btn-sm">
                        <i class="fas fa-user-plus"></i> Thêm môi giới
                    </button> *@
                </div>
            </div>

            <div class="card-body">
                <form method="get" action="/RealEstateAdmin/Agents" id="filterForm">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm môi giới..." value="@ViewBag.SearchString">
                        </div>
                        <div class="col-md-2">
                            <select name="status" class="form-control" onchange="document.getElementById('filterForm').submit();">
                                <option value="">Tất cả trạng thái</option>
                                <option value="Active" selected="@(ViewBag.Status == "Active")">Active</option>
                                <option value="Inactive" selected="@(ViewBag.Status == "Inactive")">Inactive</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <select name="sortBy" class="form-control" onchange="document.getElementById('filterForm').submit();">
                                <option value="">Sắp xếp theo</option>
                                <option value="properties" selected="@(ViewBag.SortBy == "properties")">Nhiều tin nhất</option>
                                <option value="rating" selected="@(ViewBag.SortBy == "rating")">Rating cao nhất</option>
                                <option value="newest" selected="@(ViewBag.SortBy == "newest")">Mới nhất</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-info"><i class="fas fa-search"></i> Tìm</button>
                            @if (!string.IsNullOrEmpty(ViewBag.SearchString) || !string.IsNullOrEmpty(ViewBag.Status) || !string.IsNullOrEmpty(ViewBag.SortBy))
                            {
                                <a href="/RealEstateAdmin/Agents" class="btn btn-secondary ml-1"><i class="fas fa-times"></i> Xóa bộ lọc</a>
                            }
                        </div>
                    </div>
                </form>

                @if (Model != null && Model.Any())
                {
                    <div class="row">
                        @foreach (var agent in Model)
                        {
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-3 text-center">
                                            @{
                                                var avatarPath = agent.Avatar;
                                                if (string.IsNullOrEmpty(avatarPath))
                                                {
                                                    avatarPath = "/assets/images/avatar/avatarMacDinh.jpg";
                                                }
                                                else if (!avatarPath.StartsWith("http://") && !avatarPath.StartsWith("https://") && !avatarPath.StartsWith("/"))
                                                {
                                                    avatarPath = "/assets/images/avatar/" + avatarPath.TrimStart('/');
                                                }
                                            }
                                            <img src="@avatarPath" alt="Avatar" class="img-circle" style="width: 80px; height: 80px; object-fit: cover;" onerror="this.src='/assets/images/avatar/avatarMacDinh.jpg'">
                                        </div>
                                        <div class="col-md-9">
                                            <h5><strong>@agent.Name</strong></h5>
                                            <p class="mb-1">
                                                <i class="fas fa-phone text-primary"></i> @agent.Phone<br>
                                                <i class="fas fa-envelope text-info"></i> @agent.Email
                                            </p>
                                            <div class="mb-2">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= (int)agent.Rating)
                                                    {
                                                        <i class="fas fa-star text-warning"></i>
                                                    }
                                                    else if (i - 0.5 <= agent.Rating)
                                                    {
                                                        <i class="fas fa-star-half-alt text-warning"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="far fa-star text-warning"></i>
                                                    }
                                                }
                                                <span>@agent.Rating (@agent.Reviews đánh giá)</span>
                                            </div>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row text-center">
                                        <div class="col-4">
                                            <div class="description-block">
                                                <h5 class="description-header text-primary">@agent.TotalProperties</h5>
                                                <span class="description-text">Tin đăng</span>
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="description-block">
                                                <h5 class="description-header text-success">@agent.TotalViews</h5>
                                                <span class="description-text">Lượt xem</span>
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="description-block">
                                                    @if (agent.Status == "Active")
                                                    {
                                                        <span class="badge badge-success">Active</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-secondary">Inactive</span>
                                                    }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-12">
                                            <div class="btn-group btn-block">

                                                <a href="/RealEstateAdmin/agents/detail/@agent.Id" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i> Xem chi tiết
                                                </a>

                                                @if (agent.Status == "Active")
                                                {
                                                    <!-- KHÓA -->
                                                    <form asp-area="RealEstateAdmin"
                                                            asp-controller="Agents"
                                                            asp-action="Lock"
                                                            asp-route-id="@agent.Id"
                                                            method="post"
                                                            onsubmit="return confirm('Bạn có chắc chắn muốn khóa môi giới này?');">

                                                        <button type="submit" class="btn btn-sm btn-warning">
                                                            <i class="fas fa-lock"></i> Khóa
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <!-- MỞ KHÓA -->
                                                    <form asp-area="RealEstateAdmin"
                                                            asp-controller="Agents"
                                                            asp-action="Unlock"
                                                            asp-route-id="@agent.Id"
                                                            method="post"
                                                            onsubmit="return confirm('Bạn có chắc chắn muốn mở khóa môi giới này?');">

                                                        <button type="submit" class="btn btn-sm btn-success">
                                                            <i class="fas fa-unlock"></i> Mở khóa
                                                        </button>
                                                    </form>
                                                }

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> Không tìm thấy môi giới nào.
                    </div>
                }
            </div>
        </div>
    </div>
</section>