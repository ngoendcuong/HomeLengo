@* Areas/RealEstateAdmin/Views/Categories/PropertyStatus.cshtml *@
@model IEnumerable<dynamic>
@{
    Layout = "~/Areas/RealEstateAdmin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Trạng thái BĐS";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Trạng thái Bất động sản</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-area="RealEstateAdmin" asp-controller="Dashboard" asp-action="Index">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-area="RealEstateAdmin" asp-controller="Categories" asp-action="Index">Danh mục</a>
                    </li>
                    <li class="breadcrumb-item active">Trạng thái</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Quản lý Trạng thái</h3>
                <div class="card-tools">
                    <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#addStatusModal">
                        <i class="fas fa-plus"></i> Thêm mới
                    </button>
                </div>
            </div>

            <div class="card-body">
                <table class="table table-bordered table-hover">
                    <thead class="bg-light">
                        <tr>
                            <th width="8%">ID</th>
                            <th width="25%">Tên trạng thái</th>
                            <th width="20%">Slug</th>
                            <th width="15%">Màu hiển thị</th>
                            <th width="12%">Trạng thái</th>
                            <th width="20%">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var status in Model)
                        {
                            <tr>
                                <td>@status.Id</td>
                                <td><strong>@status.Name</strong></td>
                                <td><code>@status.Slug</code></td>
                                <td>
                                    <span class="badge badge-@status.Color">@status.Name</span>
                                </td>
                                <td>
                                    @if (status.IsActive)
                                    {
                                        <span class="badge badge-success">Kích hoạt</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">Ẩn</span>
                                    }
                                </td>
                                <td>
                                    <button type="button"
                                            class="btn btn-sm btn-warning btn-edit-status"
                                            title="Sửa"
                                            data-id="@status.Id"
                                            data-name="@status.Name"
                                            data-toggle="modal"
                                            data-target="#editStatusModal">
                                        <i class="fas fa-edit"></i>
                                    </button>

                                    <form asp-area="RealEstateAdmin"
                                          asp-controller="Categories"
                                          asp-action="DeletePropertyStatus"
                                          asp-route-id="@status.Id"
                                          method="post"
                                          style="display:inline;"
                                          onsubmit="return confirm('Bạn có chắc chắn muốn xóa trạng thái này?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }

                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">Chưa có trạng thái nào</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</section>

<!-- Modal Thêm -->
<div class="modal fade" id="addStatusModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h4 class="modal-title">Thêm Trạng thái</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <form id="addStatusForm"
                      asp-area="RealEstateAdmin"
                      asp-controller="Categories"
                      asp-action="CreatePropertyStatus"
                      method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label>Tên trạng thái <span class="text-danger">*</span></label>
                        <input type="text" name="Name" class="form-control" placeholder="VD: Đang bán" required>
                    </div>

                    @* Slug/Color/IsActive đang là dữ liệu hiển thị ở View (dynamic),
                       nhưng DB PropertyStatus của bạn thường chỉ có StatusId + Name.
                       Nên mình KHÔNG gửi các field này để tránh lỗi bind. *@
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="submit" form="addStatusForm" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Sửa -->
<div class="modal fade" id="editStatusModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h4 class="modal-title">Sửa Trạng thái</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <form id="editStatusForm"
                      asp-area="RealEstateAdmin"
                      asp-controller="Categories"
                      asp-action="EditPropertyStatus"
                      method="post">
                    @Html.AntiForgeryToken()

                    <input type="hidden" name="StatusId" id="editStatusId" />

                    <div class="form-group">
                        <label>Tên trạng thái <span class="text-danger">*</span></label>
                        <input type="text" name="Name" id="editStatusName" class="form-control" required>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="submit" form="editStatusForm" class="btn btn-warning">Cập nhật</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.btn-edit-status').click(function () {
                var id = $(this).data('id');
                var name = $(this).data('name');

                $('#editStatusId').val(id);
                $('#editStatusName').val(name);
            });
        });
    </script>
}
