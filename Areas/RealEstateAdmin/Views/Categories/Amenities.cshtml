@* Areas/RealEstateAdmin/Views/Categories/Amenities.cshtml *@
@model IEnumerable<dynamic>
@{
    Layout = "~/Areas/RealEstateAdmin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Tiện ích";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quản lý Tiện ích</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-area="RealEstateAdmin" asp-controller="Dashboard" asp-action="Index">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-area="RealEstateAdmin" asp-controller="Categories" asp-action="Index">Danh mục</a>
                    </li>
                    <li class="breadcrumb-item active">Tiện ích</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh sách Tiện ích</h3>
                <div class="card-tools">
                    <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#addAmenityModal">
                        <i class="fas fa-plus"></i> Thêm tiện ích
                    </button>
                </div>
            </div>

            <div class="card-body">
                <div class="row">
                    @foreach (var amenity in Model)
                    {
                        <div class="col-md-3 col-sm-6">
                            <div class="info-box">
                                <span class="info-box-icon bg-info">
                                    <i class="fas @amenity.Icon"></i>
                                </span>

                                <div class="info-box-content">
                                    <span class="info-box-text">@amenity.Name</span>
                                    <span class="info-box-number">
                                        @if (amenity.IsActive)
                                        {
                                            <span class="badge badge-success">Kích hoạt</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Ẩn</span>
                                        }
                                    </span>
                                </div>

                                <div class="info-box-footer">
                                    <button type="button"
                                            class="btn btn-xs btn-warning mr-1 btn-edit-amenity"
                                            data-id="@amenity.Id"
                                            data-name="@amenity.Name"
                                            data-toggle="modal"
                                            data-target="#editAmenityModal"
                                            title="Sửa">
                                        <i class="fas fa-edit"></i>
                                    </button>

                                    <form asp-area="RealEstateAdmin"
                                          asp-controller="Categories"
                                          asp-action="DeleteAmenity"
                                          asp-route-id="@amenity.Id"
                                          method="post"
                                          style="display:inline;"
                                          onsubmit="return confirm('Bạn có chắc chắn muốn xóa tiện ích này?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-xs btn-danger" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>

                            </div>
                        </div>
                    }

                    @if (!Model.Any())
                    {
                        <div class="col-12">
                            <p class="text-center text-muted mb-0">Chưa có tiện ích nào</p>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</section>

<!-- Modal Thêm -->
<div class="modal fade" id="addAmenityModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h4 class="modal-title">Thêm Tiện ích</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <form id="addAmenityForm"
                      asp-area="RealEstateAdmin"
                      asp-controller="Categories"
                      asp-action="CreateAmenity"
                      method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label>Tên tiện ích <span class="text-danger">*</span></label>
                        <input type="text" name="Name" class="form-control" placeholder="VD: Hồ bơi" required>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="submit" form="addAmenityForm" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Sửa -->
<div class="modal fade" id="editAmenityModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h4 class="modal-title">Sửa Tiện ích</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <form id="editAmenityForm"
                      asp-area="RealEstateAdmin"
                      asp-controller="Categories"
                      asp-action="EditAmenity"
                      method="post">
                    @Html.AntiForgeryToken()

                    <input type="hidden" name="AmenityId" id="editAmenityId" />

                    <div class="form-group">
                        <label>Tên tiện ích <span class="text-danger">*</span></label>
                        <input type="text" name="Name" id="editAmenityName" class="form-control" required>
                    </div>

                    @* Nếu DB của bạn có IconClass cho Amenity thì thêm input ở đây.
                       Hiện controller EditAmenity đang Update toàn entity, nên chỉ gửi đúng field có trong model. *@
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="submit" form="editAmenityForm" class="btn btn-warning">Cập nhật</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            // Fill dữ liệu vào modal sửa
            $('.btn-edit-amenity').click(function () {
                var id = $(this).data('id');
                var name = $(this).data('name');

                $('#editAmenityId').val(id);
                $('#editAmenityName').val(name);

                // Quan trọng: EditAmenity action có tham số id, nên set action route-id cho form
                var actionUrl = '@Url.Action("EditAmenity", "Categories", new { area = "RealEstateAdmin", id = "__id__" })';
                actionUrl = actionUrl.replace('__id__', id);
                $('#editAmenityForm').attr('action', actionUrl);
            });

        });
    </script>
}
