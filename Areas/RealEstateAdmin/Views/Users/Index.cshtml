@* Areas/RealEstateAdmin/Views/Users/Index.cshtml *@
@model IEnumerable<dynamic>
@{
    Layout = "~/Areas/RealEstateAdmin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Quản lý Người dùng";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quản lý Người dùng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/RealEstateAdmin/dashboard">Home</a></li>
                    <li class="breadcrumb-item active">Người dùng</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh sách Người dùng</h3>
                <div class="card-tools">
                    <button class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> Thêm mới
                    </button>
                </div>
            </div>

            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="Tìm theo tên, email, SĐT...">
                    </div>
                    <div class="col-md-2">
                        <select class="form-control">
                            <option>Tất cả vai trò</option>
                            <option>Admin</option>
                            <option>Agent</option>
                            <option>User</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select class="form-control">
                            <option>Tất cả trạng thái</option>
                            <option>Active</option>
                            <option>Locked</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-info"><i class="fas fa-search"></i> Tìm</button>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="bg-light">
                            <tr>
                                <th width="5%">ID</th>
                                <th width="8%">Avatar</th>
                                <th width="18%">Họ tên</th>
                                <th width="18%">Email</th>
                                <th width="12%">Số điện thoại</th>
                                <th width="10%">Vai trò</th>
                                <th width="10%">Trạng thái</th>
                                <th width="19%">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.Id</td>
                                    <td>
                                        <img src="@user.Avatar" alt="Avatar" class="img-circle" style="width: 40px; height: 40px;">
                                    </td>
                                    <td><strong>@user.Name</strong></td>
                                    <td>@user.Email</td>
                                    <td>@user.Phone</td>
                                    <td>
                                        @if (user.Role == "Admin")
                                        {
                                            <span class="badge badge-danger">@user.Role</span>
                                        }
                                        else if (user.Role == "Agent")
                                        {
                                            <span class="badge badge-warning">@user.Role</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-info">@user.Role</span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.Status == "Active")
                                        {
                                            <span class="badge badge-success">@user.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">@user.Status</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <button class="btn btn-sm btn-info btn-view-user"
                                                    data-id="@user.Id"
                                                    data-toggle="modal"
                                                    data-target="#userDetailModal"
                                                    title="Xem">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button class="btn btn-sm btn-warning" title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <form asp-action="ToggleStatus" asp-route-id="@user.Id" method="post" style="display:inline;">
                                                @if (user.Status == "Active")
                                                {
                                                    <button type="submit" class="btn btn-sm btn-danger" title="Khóa">
                                                        <i class="fas fa-lock"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button type="submit" class="btn btn-sm btn-success" title="Mở khóa">
                                                        <i class="fas fa-unlock"></i>
                                                    </button>
                                                }
                                            </form>
                                            <form asp-action="Delete" asp-route-id="@user.Id" method="post" style="display:inline;" onsubmit="return confirm('Bạn có chắc chắn muốn xóa người dùng này?');">
                                                <button type="submit" class="btn btn-sm btn-danger" title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="row mt-3">
                    <div class="col-sm-5">
                        <div class="dataTables_info">Hiển thị 1 đến 5 của 50 bản ghi</div>
                    </div>
                    <div class="col-sm-7">
                        <ul class="pagination pagination-sm float-right">
                            <li class="page-item"><a class="page-link" href="#">«</a></li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">»</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Modal Chi tiết User -->
<div class="modal fade" id="userDetailModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h4 class="modal-title">Thông tin Người dùng</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <img id="modalAvatar" src="https://via.placeholder.com/150" class="img-circle img-fluid" alt="Avatar">
                        <h4 id="modalName" class="mt-2">Đang tải...</h4>
                        <p id="modalRole" class="text-muted"></p>
                        <span id="modalStatus" class="badge"></span>
                    </div>
                    <div class="col-md-8">
                        <h5>Thông tin cơ bản</h5>
                        <table class="table table-sm">
                            <tr>
                                <td width="40%"><strong>Email:</strong></td>
                                <td id="modalEmail">-</td>
                            </tr>
                            <tr>
                                <td><strong>Số điện thoại:</strong></td>
                                <td id="modalPhone">-</td>
                            </tr>
                            <tr>
                                <td><strong>Địa chỉ:</strong></td>
                                <td id="modalAddress">-</td>
                            </tr>
                            <tr>
                                <td><strong>Ngày tham gia:</strong></td>
                                <td id="modalJoinDate">-</td>
                            </tr>
                            <tr>
                                <td><strong>Đăng nhập gần nhất:</strong></td>
                                <td id="modalLastLogin">-</td>
                            </tr>
                        </table>

                        <h5 class="mt-3">Thống kê hoạt động</h5>
                        <div class="row">
                            <div class="col-6">
                                <div class="info-box">
                                    <span class="info-box-icon bg-info"><i class="fas fa-building"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Tin đăng</span>
                                        <span class="info-box-number" id="modalTotalProperties">0</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="info-box">
                                    <span class="info-box-icon bg-success"><i class="fas fa-eye"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Lượt xem</span>
                                        <span class="info-box-number" id="modalTotalViews">0</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div id="modalBio" class="mt-2">
                            <strong>Giới thiệu:</strong>
                            <p class="text-muted" id="modalBioText">-</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Chỉnh sửa
                </button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Khi click vào nút xem chi tiết
            $('.btn-view-user').click(function() {
                var userId = $(this).data('id');

                // Gọi API lấy thông tin user
                $.ajax({
                    url: '/RealEstateAdmin/Users/GetUserDetail',
                    type: 'GET',
                    data: { id: userId },
                    success: function(data) {
                        // Cập nhật thông tin vào modal
                        $('#modalAvatar').attr('src', data.avatar);
                        $('#modalName').text(data.name);
                        $('#modalRole').text(data.role);
                        $('#modalEmail').text(data.email);
                        $('#modalPhone').text(data.phone);
                        $('#modalAddress').text(data.address);
                        $('#modalJoinDate').text(data.joinDate);
                        $('#modalLastLogin').text(data.lastLogin);
                        $('#modalTotalProperties').text(data.totalProperties);
                        $('#modalTotalViews').text(data.totalViews);
                        $('#modalBioText').text(data.bio);

                        // Cập nhật status badge
                        if (data.status === 'Active') {
                            $('#modalStatus').removeClass().addClass('badge badge-success').text('Active');
                        } else {
                            $('#modalStatus').removeClass().addClass('badge badge-secondary').text('Locked');
                        }
                    },
                    error: function() {
                        alert('Không thể tải thông tin người dùng!');
                    }
                });
            });
        });
    </script>
}