@* Areas/RealEstateAdmin/Views/Users/Index.cshtml *@
@model IEnumerable<dynamic>
@{
    Layout = "~/Areas/RealEstateAdmin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Quản lý Người dùng";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quản lý Người dùng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/RealEstateAdmin/dashboard">Home</a></li>
                    <li class="breadcrumb-item active">Người dùng</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh sách Người dùng</h3>
                <div class="card-tools">
                    @* <button class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> Thêm mới
                    </button> *@
                </div>
            </div>

            <div class="card-body">
                <form method="get" action="/RealEstateAdmin/Users" id="filterForm">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <input type="text" name="searchString" class="form-control" placeholder="Tìm theo tên, email, SĐT..." value="@ViewBag.SearchString">
                        </div>
                        <div class="col-md-2">
                            <select name="role" class="form-control" onchange="document.getElementById('filterForm').submit();">
                                <option value="">Tất cả vai trò</option>
                                @if (ViewBag.Roles != null)
                                {
                                    @foreach (var roleName in ViewBag.Roles)
                                    {
                                        <option value="@roleName" selected="@(ViewBag.Role == roleName)">@roleName</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <select name="status" class="form-control" onchange="document.getElementById('filterForm').submit();">
                                <option value="">Tất cả trạng thái</option>
                                <option value="Active" selected="@(ViewBag.Status == "Active")">Active</option>
                                <option value="Locked" selected="@(ViewBag.Status == "Locked")">Locked</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-info"><i class="fas fa-search"></i> Tìm</button>
                            @if (!string.IsNullOrEmpty(ViewBag.SearchString) || !string.IsNullOrEmpty(ViewBag.Role) || !string.IsNullOrEmpty(ViewBag.Status))
                            {
                                <a href="/RealEstateAdmin/Users" class="btn btn-secondary ml-1"><i class="fas fa-times"></i> Xóa bộ lọc</a>
                            }
                        </div>
                    </div>
                </form>

                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="bg-light">
                            <tr>
                                <th width="5%">ID</th>
                                <th width="8%">Avatar</th>
                                <th width="18%">Họ tên</th>
                                <th width="18%">Email</th>
                                <th width="12%">Số điện thoại</th>
                                <th width="10%">Vai trò</th>
                                <th width="10%">Trạng thái</th>
                                <th width="19%">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.Id</td>
                                    <td>
                                        <img src="@user.Avatar" alt="Avatar" class="img-circle" style="width: 40px; height: 40px; object-fit: cover;" onerror="this.onerror=null; this.src='/assets/images/avatar/avatarMacDinh.jpg';">
                                    </td>
                                    <td><strong>@user.Name</strong></td>
                                    <td>@user.Email</td>
                                    <td>@user.Phone</td>
                                    <td>
                                        @if (user.Role == "Admin")
                                        {
                                            <span class="badge badge-danger">@user.Role</span>
                                        }
                                        else if (user.Role == "Agent")
                                        {
                                            <span class="badge badge-warning">@user.Role</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-info">@user.Role</span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.Status == "Active")
                                        {
                                            <span class="badge badge-success">@user.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">@user.Status</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <button class="btn btn-sm btn-info btn-view-user"
                                                    data-id="@user.Id"
                                                    data-toggle="modal"
                                                    data-target="#userDetailModal"
                                                    title="Xem">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            @if (user.RoleId != 1)
                                            {
                                                <button class="btn btn-sm btn-warning btn-edit-role" 
                                                        data-id="@user.Id" 
                                                        data-roleid="@user.RoleId"
                                                        data-rolename="@user.Role"
                                                        data-toggle="modal"
                                                        data-target="#editRoleModal"
                                                        title="Sửa vai trò">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button class="btn btn-sm @(user.Status == "Active" ? "btn-danger" : "btn-success") btn-toggle-status" 
                                                        data-id="@user.Id"
                                                        data-status="@user.Status"
                                                        title="@(user.Status == "Active" ? "Khóa" : "Mở khóa")">
                                                    <i class="fas @(user.Status == "Active" ? "fa-lock" : "fa-unlock")"></i>
                                                </button>
                                                <button class="btn btn-sm btn-danger btn-delete-user" 
                                                        data-id="@user.Id"
                                                        title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-sm btn-warning btn-edit-role" 
                                                        data-id="@user.Id" 
                                                        data-roleid="@user.RoleId"
                                                        data-rolename="@user.Role"
                                                        data-toggle="modal"
                                                        data-target="#editRoleModal"
                                                        title="Sửa vai trò">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button class="btn btn-sm btn-secondary" disabled title="Không thể khóa Admin">
                                                    <i class="fas fa-lock"></i>
                                                </button>
                                                <button class="btn btn-sm btn-secondary" disabled title="Không thể xóa Admin">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (!Model.Any())
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> Không tìm thấy người dùng nào.
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<!-- Modal Chỉnh sửa Vai trò -->
<div class="modal fade" id="editRoleModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h4 class="modal-title">Chỉnh sửa Vai trò</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form id="editRoleForm">
                    <input type="hidden" id="editUserId" name="userId">
                    <div class="form-group">
                        <label for="editRoleSelect">Vai trò:</label>
                        <select class="form-control" id="editRoleSelect" name="roleId" required>
                            <option value="">-- Chọn vai trò --</option>
                            @if (ViewBag.AllRoles != null)
                            {
                                @foreach (var role in ViewBag.AllRoles)
                                {
                                    <option value="@role.RoleId">@role.RoleName</option>
                                }
                            }
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-warning" id="btnSaveRole">
                    <i class="fas fa-save"></i> Lưu
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Chi tiết User -->
<div class="modal fade" id="userDetailModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h4 class="modal-title">Thông tin Người dùng</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <img id="modalAvatar" src="/assets/images/avatar/avatarMacDinh.jpg" class="img-circle img-fluid" alt="Avatar" style="object-fit: cover;" onerror="this.onerror=null; this.src='/assets/images/avatar/avatarMacDinh.jpg';">
                        <h4 id="modalName" class="mt-2">Đang tải...</h4>
                        <p id="modalRole" class="text-muted"></p>
                        <span id="modalStatus" class="badge"></span>
                    </div>
                    <div class="col-md-8">
                        <h5>Thông tin cơ bản</h5>
                        <table class="table table-sm">
                            <tr>
                                <td width="40%"><strong>Tên đăng nhập:</strong></td>
                                <td id="modalUsername">-</td>
                            </tr>
                            <tr>
                                <td><strong>Email:</strong></td>
                                <td id="modalEmail">-</td>
                            </tr>
                            <tr>
                                <td><strong>Số điện thoại:</strong></td>
                                <td id="modalPhone">-</td>
                            </tr>
                            <tr>
                                <td><strong>Địa chỉ:</strong></td>
                                <td id="modalAddress">-</td>
                            </tr>
                            <tr>
                                <td><strong>Ngày tham gia:</strong></td>
                                <td id="modalJoinDate">-</td>
                            </tr>
                            <tr>
                                <td><strong>Đăng nhập gần nhất:</strong></td>
                                <td id="modalLastLogin">-</td>
                            </tr>
                        </table>

                        <h5 class="mt-3">Thống kê hoạt động</h5>
                        <div class="row">
                            <div class="col-6">
                                <div class="info-box">
                                    <span class="info-box-icon bg-info"><i class="fas fa-building"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Tin đăng</span>
                                        <span class="info-box-number" id="modalTotalProperties">0</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="info-box">
                                    <span class="info-box-icon bg-success"><i class="fas fa-eye"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Lượt xem</span>
                                        <span class="info-box-number" id="modalTotalViews">0</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div id="modalBio" class="mt-2">
                            <strong>Giới thiệu:</strong>
                            <p class="text-muted" id="modalBioText">-</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Khi click vào nút xem chi tiết
            $('.btn-view-user').click(function() {
                var userId = $(this).data('id');

                // Gọi API lấy thông tin user
                $.ajax({
                    url: '/RealEstateAdmin/Users/GetUserDetail',
                    type: 'GET',
                    data: { id: userId },
                    success: function(data) {
                        // Cập nhật thông tin vào modal
                        $('#modalAvatar').attr('src', data.avatar);
                        $('#modalName').text(data.name);
                        $('#modalRole').text(data.role);
                        $('#modalUsername').text(data.username || '-');
                        $('#modalEmail').text(data.email || '-');
                        $('#modalPhone').text(data.phone || '-');
                        $('#modalAddress').text(data.address || '-');
                        $('#modalJoinDate').text(data.joinDate || '-');
                        $('#modalLastLogin').text(data.lastLogin || '-');
                        $('#modalTotalProperties').text(data.totalProperties || '0');
                        $('#modalTotalViews').text(data.totalViews || '0');
                        $('#modalBioText').text(data.bio || '-');

                        // Cập nhật status badge
                        if (data.status === 'Active') {
                            $('#modalStatus').removeClass().addClass('badge badge-success').text('Active');
                        } else {
                            $('#modalStatus').removeClass().addClass('badge badge-secondary').text('Locked');
                        }
                    },
                    error: function() {
                        alert('Không thể tải thông tin người dùng!');
                    }
                });
            });

            // Khi click vào nút chỉnh sửa vai trò
            $('.btn-edit-role').click(function() {
                var userId = $(this).data('id');
                var roleId = $(this).data('roleid');
                $('#editUserId').val(userId);
                $('#editRoleSelect').val(roleId);
            });

            // Lưu vai trò mới
            $('#btnSaveRole').click(function() {
                var userId = $('#editUserId').val();
                var roleId = $('#editRoleSelect').val();

                if (!roleId) {
                    alert('Vui lòng chọn vai trò!');
                    return;
                }

                $.ajax({
                    url: '/RealEstateAdmin/Users/UpdateUserRole',
                    type: 'POST',
                    data: {
                        userId: userId,
                        roleId: roleId
                    },
                    success: function(response) {
                        if (response.success) {
                            alert(response.message);
                            $('#editRoleModal').modal('hide');
                            location.reload();
                        } else {
                            alert(response.message || 'Có lỗi xảy ra!');
                        }
                    },
                    error: function() {
                        alert('Không thể cập nhật vai trò!');
                    }
                });
            });

            // Khi click vào nút khóa/mở khóa
            $('.btn-toggle-status').click(function() {
                var userId = $(this).data('id');
                var currentStatus = $(this).data('status');
                var action = currentStatus === 'Active' ? 'khóa' : 'mở khóa';
                
                if (!confirm('Bạn có chắc chắn muốn ' + action + ' tài khoản này?')) {
                    return;
                }

                $.ajax({
                    url: '/RealEstateAdmin/Users/ToggleStatus',
                    type: 'POST',
                    data: { id: userId },
                    success: function(response) {
                        if (response.success) {
                            alert(response.message);
                            location.reload();
                        } else {
                            alert(response.message || 'Có lỗi xảy ra!');
                        }
                    },
                    error: function() {
                        alert('Không thể thực hiện thao tác!');
                    }
                });
            });

            // Khi click vào nút xóa
            $('.btn-delete-user').click(function() {
                var userId = $(this).data('id');
                
                if (!confirm('Bạn có chắc chắn muốn xóa tài khoản này? Hành động này không thể hoàn tác!')) {
                    return;
                }

                $.ajax({
                    url: '/RealEstateAdmin/Users/Delete',
                    type: 'POST',
                    data: { id: userId },
                    success: function(response) {
                        if (response.success) {
                            alert(response.message);
                            location.reload();
                        } else {
                            alert(response.message || 'Có lỗi xảy ra!');
                        }
                    },
                    error: function() {
                        alert('Không thể xóa tài khoản!');
                    }
                });
            });
        });
    </script>
}