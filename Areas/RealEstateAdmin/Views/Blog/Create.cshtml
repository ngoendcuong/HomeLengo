@* Areas/RealEstateAdmin/Views/Blog/Create.cshtml *@
@model HomeLengo.Models.Blog

@{
    Layout = "~/Areas/RealEstateAdmin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Thêm bài viết";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Thêm Bài viết mới</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-area="RealEstateAdmin" asp-controller="Dashboard" asp-action="Index">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-area="RealEstateAdmin" asp-controller="Blog" asp-action="Index">Blog</a>
                    </li>
                    <li class="breadcrumb-item active">Thêm bài viết</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle"></i> Vui lòng kiểm tra lại dữ liệu.
                <div asp-validation-summary="All" class="mt-2"></div>
            </div>
        }

        <form asp-area="RealEstateAdmin"
              asp-controller="Blog"
              asp-action="Create"
              method="post"
              enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-8">

                    <!-- Nội dung -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Nội dung bài viết</h3>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label>Tiêu đề <span class="text-danger">*</span></label>
                                <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề bài viết">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label>Slug</label>
                                <input asp-for="Slug" class="form-control" placeholder="tieu-de-bai-viet" />
                                <small class="text-muted">Tự động tạo từ tiêu đề nếu để trống</small>
                            </div>

                            <div class="form-group">
                                <label>Nội dung <span class="text-danger">*</span></label>
                                <textarea asp-for="Content" id="content" class="form-control" rows="15"></textarea>
                                <span asp-validation-for="Content" class="text-danger"></span>
                                <small class="text-muted">Sử dụng HTML hoặc editor WYSIWYG</small>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="col-md-4">

                    <!-- Xuất bản -->
                    <div class="card">
                        <div class="card-header bg-primary">
                            <h3 class="card-title">Xuất bản</h3>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label>Trạng thái</label>

                                @* IsPublished là bool? -> dùng asp-for để bind chắc chắn *@
                                <select asp-for="IsPublished" class="form-control" id="publishStatus">
                                    <option value="false">Nháp</option>
                                    <option value="true">Công khai</option>
                                </select>

                                <small class="text-muted d-block mt-1">
                                    Nếu chọn Công khai mà không nhập ngày xuất bản, hệ thống sẽ tự lấy thời gian hiện tại.
                                </small>
                            </div>

                            <div class="form-group">
                                <label>Ngày xuất bản</label>

                                @* Bind đúng PublishedAt (datetime-local) *@
                                <input asp-for="PublishedAt" type="datetime-local" class="form-control"
                                       value="@(Model?.PublishedAt.HasValue == true ? Model.PublishedAt.Value.ToString("yyyy-MM-ddTHH:mm") : "")" />

                                <span asp-validation-for="PublishedAt" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label>Tác giả</label>
                                <select asp-for="AuthorId" class="form-control" asp-items="ViewBag.Authors">
                                    <option value="">-- Chọn tác giả --</option>
                                </select>
                                <span asp-validation-for="AuthorId" class="text-danger"></span>
                            </div>

                            <hr />

                            <button type="submit" class="btn btn-success btn-block">
                                <i class="fas fa-save"></i> Lưu
                            </button>

                            <a asp-area="RealEstateAdmin" asp-controller="Blog" asp-action="Index" class="btn btn-warning btn-block">
                                <i class="fas fa-times"></i> Hủy
                            </a>
                        </div>
                    </div>

                    <!-- Danh mục -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Danh mục</h3>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                                    <option value="">-- Chọn danh mục --</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Ảnh đại diện -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Ảnh đại diện</h3>
                        </div>

                        <div class="card-body">
                            <div class="form-group text-center">
                                <img id="preview"
                                     src="@(string.IsNullOrWhiteSpace(Model?.Thumbnail) ? "https://via.placeholder.com/300x200?text=Image" : Model!.Thumbnail)"
                                     class="img-fluid mb-2"
                                     style="max-height:200px;object-fit:cover;border:1px solid #ddd;border-radius:8px;"
                                     onerror="this.onerror=null;this.src='https://via.placeholder.com/300x200?text=Image';" />

                                <input asp-for="Thumbnail" class="form-control"
                                       placeholder="VD: /uploads/blog/abc.jpg hoặc https://... hoặc blog-1.jpg" />
                                <span asp-validation-for="Thumbnail" class="text-danger"></span>

                                @* <small class="text-muted d-block mt-1">
                                    Hiện tại đang lưu link/path vào Thumbnail. Nếu bạn muốn upload file ảnh trực tiếp, mình sẽ sửa controller để lưu vào wwwroot/uploads/blog.
                                </small> *@
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(function () {
            const $thumb = $('input[name="Thumbnail"]');
            const $img = $('#preview');

            // update preview ngay khi nhập
            $thumb.on('input', function () {
                const v = $(this).val();
                if (v && v.trim().length > 0) $img.attr('src', v.trim());
                else $img.attr('src', 'https://via.placeholder.com/300x200?text=Image');
            });
        });
    </script>
}
