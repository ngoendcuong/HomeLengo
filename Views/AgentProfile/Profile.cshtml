@model HomeLengo.Models.AgentProfile

<section class="agent-profile py-5">
    <div class="container" style="max-width:1100px">

        <div class="card shadow-sm border-0 rounded-4">
            <div class="card-body p-4">

                <!-- HEADER -->
                <div class="d-flex align-items-center gap-4 mb-4">
                    <img src="@Model.Avatar"
                         class="rounded-circle border"
                         style="width:120px;height:120px;object-fit:cover" />

                    <div>
                        <h3 class="fw-bold mb-1">@Model.DisplayName</h3>

                        @if (Model.ServiceRegister.Plan.IsBroker == true)

                        {
                            <span class="badge bg-success mb-2">
                                Môi giới chính thức
                            </span>
                        }

                        <div class="text-muted mt-2">
                            <div>Email: @Model.ServiceRegister.Email</div>
                            <div>SĐT: @Model.ServiceRegister.Phone</div>
                        </div>
                    </div>
                </div>

                <hr />

                <!-- INFO -->
                <div class="row mb-4">
                    <div class="col-md-6 mb-3">
                        <div class="fw-semibold">Gói dịch vụ</div>
                        <div class="text-muted">
                            @Model.ServiceRegister.Plan.Name
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="fw-semibold">Phí gói</div>
                        <div class="text-danger fw-bold">
                            @Model.ServiceRegister.Plan.Price.ToString("N0") VNĐ
                        </div>
                    </div>
                </div>

                <!-- DESCRIPTION -->
                <div class="mb-4">
                    <h5 class="fw-semibold">Giới thiệu</h5>
                    <p class="text-muted mb-0">
                        @Model.Description
                    </p>
                </div>

                <hr />

                <!-- FOOTER -->
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                        Ngày tham gia: @Model.CreatedAt?.ToString("dd/MM/yyyy")
                    </small>

                   
                </div>

            </div>
        </div>

    </div>
</section>
