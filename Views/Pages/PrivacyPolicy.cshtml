<!-- JS -->
<script>
    const originalSidebarItems = [
        {id: 'privacy-main', text: 'Chính Sách Bảo Mật'},
        {id: 'terms', text: 'Điều khoản sử dụng'},
        {id: 'limit', text: 'Hạn chế'},
        {id: 'edit', text: 'Sửa đổi và đính chính'},
        {id: 'update', text: 'Sửa đổi điều khoản sử dụng trang web'},
        {id: 'risk', text: 'Rủi ro'}
    ];

       const contentWrapper = document.getElementById('privacy-content');
    const sidebarMenu = document.getElementById('privacy-menu');
    const privacyMain = document.getElementById('privacy-main');

           function resetSidebar() {
        sidebarMenu.innerHTML = '';

        originalSidebarItems.forEach(item => {
            const li = document.createElement('li');
            li.setAttribute('data-target', item.id);
            li.innerHTML = `<a href="#">${item.text}</a>`;
            li.addEventListener('click', menuClickHandler);
            sidebarMenu.appendChild(li);
        });
    }


    // Tạo một item sidebar
    function createSidebarItem(targetId) {
        const targetContent = document.getElementById(targetId);
        const li = document.createElement('li');
        li.setAttribute('data-target', targetId);
        li.innerHTML = `<a href="#">${targetContent.querySelector('h6')?.innerText || targetContent.querySelector('h4')?.innerText}</a>`;
        li.addEventListener('click', menuClickHandler);
        return li;
    }

    // Xử lý click menu
    function menuClickHandler(e) {
        e.preventDefault();
        const li = this;
        const targetId = li.getAttribute('data-target');

        // Nếu click vào Chính Sách Bảo Mật
        if(targetId === 'privacy-main') {
            // Ẩn tất cả box
            contentWrapper.querySelectorAll('.box-item').forEach(box => box.classList.remove('active'));
            // Hiển thị Chính Sách Bảo Mật
            privacyMain.classList.add('active');
            // Reset sidebar
            resetSidebar();
            return;
        }

        const targetContent = document.getElementById(targetId);
        const activeContent = contentWrapper.querySelector('.box-item.active');

        if(activeContent) {
            activeContent.classList.remove('active');

            // Nếu active trước đó không phải Chính Sách Bảo Mật, thêm vào sidebar
            if(activeContent.id !== 'privacy-main') {
                const oldLi = createSidebarItem(activeContent.id);
                sidebarMenu.appendChild(oldLi);
            }
        }

        // Luôn đảm bảo Chính Sách Bảo Mật ở trên cùng sidebar
        if(!sidebarMenu.querySelector('li[data-target="privacy-main"]')) {
            const privacyLi = createSidebarItem('privacy-main');
            sidebarMenu.prepend(privacyLi);
        }

        // Hiển thị content mới
        targetContent.classList.add('active');
        // Xóa mục vừa click trong sidebar
        li.remove();
    }

    // Gán sự kiện click cho các mục ban đầu
    sidebarMenu.querySelectorAll('li').forEach(li => {
        li.addEventListener('click', menuClickHandler);
    });

</script>

