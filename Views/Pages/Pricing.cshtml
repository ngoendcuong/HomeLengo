@model List<ServicePlan>
@{
    var isLoggedIn = !string.IsNullOrEmpty(Context.Session.GetString("UserId"));
}
<!-- Page Title -->
<section class="flat-title-page" style="background-image: url('/assets/images/banner/banner-property-12.jpg');">
    <div class="container">
        <div class="breadcrumb-content">
            <ul class="breadcrumb">
                <li><a href="index.html" class="text-white">Trang Chủ</a></li>
                <li class="text-white">/ Thông Tin</li>
                <li class="text-white">/  </li>
            </ul>
            <h1 class="text-center text-white title">Đăng ký làm môi giới</h1>
        </div>
    </div>
</section>
<!-- End Page Title -->
<!-- các gói dịch vụ  -->
<section class="flat-section flat-pricing">
    <div class="container">
        <div class="box-title text-center wow fadeInUpSmall" data-wow-delay=".2s" data-wow-duration="2000ms">
            <div class="text-subtitle text-primary"></div>
            <h3 class="title mt-4">Đăng ký của chúng tôi</h3>
        </div>
        <div class="row">
            @foreach (var plan in Model)
            {
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="card h-100 shadow-sm rounded-4">
                        <div class="card-body d-flex flex-column">

                            <div class="mb-3">
                                <h3 class="fw-bold mb-1">@plan.Price.ToString("N0")đ <small class="text-muted">/tháng</small></h3>
                                <div class="fs-5 fw-semibold">@plan.Name</div>
                            </div>

                            <ul class="list-unstyled flex-grow-1">
                                @foreach (var f in plan.ServicePlanFeatures.OrderBy(x => x.DisplayOrder))
                                {
                                    <li class="d-flex gap-2 align-items-start mb-2 @(f.IsIncluded ? "" : "text-muted")">
                                        <span>@(f.IsIncluded ? "✔" : "✖")</span>
                                        <span>@f.FeatureText</span>
                                    </li>
                                }
                            </ul>

                            <a class="btn btn-primary rounded-pill mt-3 btn-buy-package"
                               href="@Url.Action("Checkout", "Payment", new { area = "", planId = plan.PlanId })">
                                Đăng ký ngay →
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- /các gói dịch vụ -->
<style>
    .flat-pricing .box-pricing {
        height: 100%;
    }

    .flat-pricing .row {
        align-items: stretch;
    }

    .flat-pricing .box-pricing .box:last-child {
        margin-top: auto;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            var isLoggedIn = @(isLoggedIn ? "true" : "false");

            $('.btn-buy-package').on('click', function (e) {
                if (!isLoggedIn) {
                    e.preventDefault();

                    // lưu URL checkout để login xong quay lại đúng plan
                    localStorage.setItem("hl_return_url", $(this).attr("href"));

                    // mở modal login
                    var modalEl = document.getElementById('modalLogin');
                    var modal = bootstrap.Modal.getInstance(modalEl) || new bootstrap.Modal(modalEl);
                    modal.show();
                    return false;
                }
            });
        });
    </script>
}
