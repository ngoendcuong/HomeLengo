@model IEnumerable<IGrouping<string?, HomeLengo.Models.Faq>>
<!-- Page Title -->
<section class="flat-title-page" style="background-image: url('/assets/images/banner/banner-property-10.jpg');">
    <div class="container">
        <div class="breadcrumb-content">
            <ul class="breadcrumb">
                <li><a href="index.html" class="text-white">Trang Chủ</a></li>
                <li class="text-white">/ Thông Tin</li>
                <li class="text-white">/ Câu Hỏi Thường Gặp</li>
            </ul>
            <h1 class="text-center text-white title">Câu Hỏi Thường Gặp</h1>
        </div>
    </div>
</section>
<!-- End Page Title -->


<section class="flat-section">
    <div class="container">

        @{
            int categoryIndex = 1; // dùng để tạo id unique
        }

        @foreach (var category in Model)
        {
            string wrapperId = $"wrapper-faq-{categoryIndex}";
            <div class="tf-faq">

                <!-- TIÊU ĐỀ CATEGORY -->
                <h3 class="fw-8 text-center title">
                    @category.Key
                </h3>

                <!-- DANH SÁCH FAQ -->
                <ul class="box-faq" id="@wrapperId">

                    @foreach (var faq in category)
                    {
                        string collapseId = $"faq-{faq.FaqId}";
                        <li class="faq-item">

                            <!-- CÂU HỎI -->
                            <a class="faq-header collapsed"
                               data-bs-toggle="collapse"
                               href="#@collapseId"
                               aria-expanded="false">
                                @faq.Question
                            </a>

                            <!-- CÂU TRẢ LỜI -->
                            <div id="@collapseId"
                                 class="collapse"
                                 data-bs-parent="#@wrapperId">

                                <p class="faq-body">
                                    @Html.Raw(faq.Answer.Replace("\n", "<br />"))
                                </p>

                            </div>
                        </li>
                    }

                </ul>
            </div>

            categoryIndex++;
        }

    </div>
</section>


