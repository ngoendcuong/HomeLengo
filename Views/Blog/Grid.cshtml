@model IEnumerable<HomeLengo.Models.Blog>
<!-- Page Title -->
<section class="flat-title-page" style="background-image: url('/assets/images/banner/banner-property-12.jpg');">
    <div class="container">
        <div class="breadcrumb-content">
            <ul class="breadcrumb">
                <li><a href="/" class="text-white">Trang Chủ</a></li>
                <li class="text-white">/ Tin Tức</li>
            </ul>
            <h1 class="text-center text-white title">Tin Tức</h1>
        </div>
    </div>
</section>
<!-- End Page Title -->
<!-- Section Blog Grid -->
<section class="flat-section">
    <div class="container">
        <div class="row blog-grid-equal-height">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <a href="/blog/detail/@item.BlogId" class="flat-blog-item hover-img d-flex flex-column h-100">
                        <div class="img-style">
                            <img class="lazyload"
                                 src="~/assets/images/blog/@item.Thumbnail"
                                 alt="@item.Title" />
                            <span class="date-post">
                                @item.PublishedAt?.ToString("MMMM dd, yyyy")
                            </span>
                        </div>
                        <div class="content-box">
                            <div class="post-author">
                                <span class="fw-6">@item.Author?.FullName</span>
                                <span>@item.Category?.Name</span>
                            </div>
                            <h5 class="title link">@item.Title</h5>
                            <p class="description">
                                @(item.Content != null && item.Content.Length > 120
                                    ? item.Content.Substring(0, 120) + "..."
                                    : item.Content)
                            </p>
                        </div>
                    </a>
                </div>
            }
            @if (ViewBag.TotalPages > 1)
            {
                <div class="col-12 text-center pt-26 line-t">
                    <ul class="justify-content-center wd-navigation">
                        @if (ViewBag.Page > 1)
                        {
                            <li><a href="/blog/grid?page=@(ViewBag.Page - 1)" class="nav-item"><i class="icon icon-arr-l"></i></a></li>
                        }
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            if (i == ViewBag.Page)
                            {
                                <li><a href="#" class="nav-item active">@i</a></li>
                            }
                            else if (i <= 3 || i > ViewBag.TotalPages - 3 || (i >= ViewBag.Page - 1 && i <= ViewBag.Page + 1))
                            {
                                <li><a href="/blog/grid?page=@i" class="nav-item">@i</a></li>
                            }
                            else if (i == 4 || i == ViewBag.TotalPages - 3)
                            {
                                <li><a href="#" class="nav-item">...</a></li>
                            }
                        }
                        @if (ViewBag.Page < ViewBag.TotalPages)
                        {
                            <li><a href="/blog/grid?page=@(ViewBag.Page + 1)" class="nav-item"><i class="icon icon-arr-r"></i></a></li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>
</section>
<!-- End Section Blog Grid -->

<style>
    .blog-grid-equal-height {
        display: flex;
        flex-wrap: wrap;
    }
    
    .blog-grid-equal-height > div {
        display: flex;
    }
    
    .blog-grid-equal-height .flat-blog-item {
        display: flex;
        flex-direction: column;
        height: 100%;
        width: 100%;
        border-radius: 16px;
        overflow: hidden;
        background: #fff;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .blog-grid-equal-height .flat-blog-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 16px rgba(0,0,0,0.15);
    }
    
    .blog-grid-equal-height .img-style {
        width: 100%;
        height: 250px;
        overflow: hidden;
        flex-shrink: 0;
    }
    
    .blog-grid-equal-height .img-style img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }
    
    .blog-grid-equal-height .flat-blog-item:hover .img-style img {
        transform: scale(1.05);
    }
    
    .blog-grid-equal-height .content-box {
        flex: 1;
        display: flex;
        flex-direction: column;
        padding: 20px;
    }
    
    .blog-grid-equal-height .content-box .title {
        margin-top: 10px;
        margin-bottom: 12px;
        line-height: 1.4;
        min-height: 3.2em;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    .blog-grid-equal-height .content-box .description {
        flex: 1;
        margin-top: 0;
        line-height: 1.6;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        color: #5c6368;
    }
    
    .blog-grid-equal-height .post-author {
        font-size: 14px;
        color: #64666c;
    }
    
    .blog-grid-equal-height .post-author span.fw-6 {
        font-weight: 600;
        margin-right: 8px;
    }
</style>
